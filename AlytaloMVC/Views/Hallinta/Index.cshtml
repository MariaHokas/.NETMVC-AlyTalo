
@{
    ViewBag.Title = "Index";
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<style>
    table {
        table-layout: auto;
        width: 180px;
        background-color: rgb(61,63,63);
        text-align: center;
        box-shadow: 2px 2px 8px #000000;
        color: white;
        padding: 40px;
        font-style: inherit;
        border-radius: 20px;
        border-color: white;
        border-style: solid;
        border-width: 30px;
        width: 90%;
    }
        .kokotable {
            table-layout: auto;
            width: 480px;
            align-items: center;
        }

    th, td {
        text-align: center;
        padding: 40px;
        padding-top: 20px;
        width: 10%;
    }

    .p
    {

        font-size: 20px;
        color: red;
    }
    caption {
        display: table-caption;
        text-align: center;
        color: red;
        font-size: 20px;
    }

    input {

        box-shadow: 2px 2px 8px #000000;
        padding: 5px;
        margin-right: 2px;
        border-radius: 4px;
        outline-color: black;
        width: 200px;
    }

    label
   {
        margin-top: 10px;
    }
    .button {
        margin-left:0px;
        box-shadow: 2px 2px 8px #000000;
        padding: 5px;
        margin-right: 2px;
        border-radius: 4px;
        color: black;
        background-color: white;
    }
  


</style>
<body>
    @section scripts {

        <script type="text/javascript">


            function päivitäListaus() {
                $.getJSON("/hallinta/getsauna", null, function (json) {
                    var Hallinta = JSON.parse(json);

                    var html = "";
                    for (var index = 0; index < Hallinta.length; index++) {
                        html += "<tr>" +
                            "<td>" + Hallinta[index].SaunaID + "</td>" +
                            "<td>" + Hallinta[index].Sauna_Nimi + "</td>" +
                            "</tr>\r\n";
                    }
                    $("#Sauna2List tbody").html(html);

                    //tästä lisätty
                });
            }

            // sivun alustaminen
            $(function () {
                päivitäListaus();

                $("#SaveButton").click(function () {
                    // luetaan käyttäjän syöttämät kentät
                    var details = { Sauna_Nimi: $("#Sauna_Nimi").val(), };


                    $.post("/hallinta/newsauna/", details, function (status) {
                        if (status == true) {
                            alert("Uusi sauna" + Sauna_Nimi + "lisätty.");
                            päivitäListaus();
                        }
                        else {
                            alert("Tallennus ei onnistunut, yritä uudelleen!");
                        }
                    });

                });

                console.log("Alustus valmis!");

            });
            // sivun alustaminen


            // sivun alustaminen
            $(function () {
                päivitäValot();

                $("#PoistaButton").click(function () {
                    // luetaan käyttäjän syöttämät kentät
                    var details = { SaunaID: $("#Sauna_ID").val(), };

                    $.post("/hallinta/Delete/", details, function (status) {
                        if (status == true) {
                            alert("Sauna poistettu");
                            päivitäValot();
                        }
                        else {
                            alert("Tallennus ei onnistunut, yritä uudelleen!");
                        }
                    });

                });

                console.log("Alustus valmis!");

            });
            // sivun alustaminen

            $(function () {
                päivitäListaus();

            });

            function päivitäValot() {
                $.getJSON("/hallinta/getvalot", null, function (json) {
                    var Hallinta = JSON.parse(json);

                    var html = "";
                    for (var index = 0; index < Hallinta.length; index++) {
                        html += "<tr>" +
                            "<td>" + Hallinta[index].ValoID + "</td>" +
                            "<td>" + Hallinta[index].Huone + "</td>" +
                            "</tr>\r\n";
                    }
                    $("#Valot2List tbody").html(html);

                    //tästä lisätty
                });
            }

            // sivun alustaminen
            $(function () {
                päivitäValot();

                $("#ValotSaveButton").click(function () {
                    // luetaan käyttäjän syöttämät kentät
                    var details = { Huone: $("#Huone").val(), };


                    $.post("/hallinta/newvalot/", details, function (status) {
                        if (status == true) {
                            alert("Uusi valo" + Huone + "lisätty.");
                            päivitäValot();
                        }
                        else {
                            alert("Tallennus ei onnistunut, yritä uudelleen!");
                        }
                    });
                });
                console.log("Alustus valmis!");
            });

            // sivun alustaminen
            $(function () {
                päivitäValot();

                $("#PoistaValotButton").click(function () {
                    // luetaan käyttäjän syöttämät kentät
                    var details = { ValoID: $("#Valo_ID").val(), };

                    $.post("/hallinta/DeleteValot/", details, function (status) {
                        if (status == true) {
                            alert("Huone poistettu");
                            päivitäValot();
                        }
                        else {
                            alert("Tallennus ei onnistunut, yritä uudelleen!");
                        }
                    });

                });

                console.log("Alustus valmis!");

            });
            // sivun alustaminen

            $(function () {
                päivitäValot();

            });

        </script>

    }

        <div class="w3-content" style="max-width:1400px; max-height:800px;">
            <div class="row">
                <!-- Sauna taulu -->
                <div class="col-sm-3"></div>
                <table id="Sauna2List" class="table kokotable col-sm-2">
                    <caption>Saunalista</caption>
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Nimi</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4"><label class="p" for="Saunan Nimi">Lisää Sauna:</label></div>
                </div>
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-5"><input type="text" class="form-control" id="Sauna_Nimi" placeholder="Anna saunalle nimi"></div>
                    <div class="col-sm-1"><button type="button" class="button" id="SaveButton">Lisää</button></div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-6"><label class="p" for="Saunan numero">Poista Sauna:</label></div>
                </div>
                <div class="row">
                    <div class="col-sm-5"><input type="text" class="form-control" id="Sauna_ID" placeholder="Anna saunan numero"></div>
                    <div class="col-sm-1"><button type="button" class="button" id="PoistaButton">Poista</button></div>
                </div>
            </div>
            <br />

            <!--Valottaulu-->
            <div class="row" style="margin-top:100px;">
                <div class="col-sm-3"></div>
                <table id="Valot2List" class="table kokotable">
                    <caption>Huonelista valoille</caption>
                    <thead>
                        <tr>
                            <th>Numero</th>
                            <th>Nimi</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4"><label class="p" for="Saunan Nimi">Lisää Huone:</label></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-5"><input type="text" class="input" id="Huone" placeholder="Anna huoneelle nimi"></div>
                        <div class="col-sm-1"><button type="button" class="button" id="ValotSaveButton">Lisää</button></div>
                    </div>
             </div>
           
            <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-6"><label class="p" for="Saunan numero">Poista huone:</label></div>
            </div>
            <div class="row">
                <div class="col-sm-5"><input type="text" class="input" id="Valo_ID" placeholder="Anna huoneen numero"></div>
                <div class="col-sm-1"><button type="button" class="button" id="PoistaValotButton">Poista</button></div>
            </div>

            </div>

        </div>
</body>



